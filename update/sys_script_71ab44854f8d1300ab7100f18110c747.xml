        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	var currentWorkWeekDate = current.work_week.work_week;
	var dateInput = current.date;
	var workWeek = new GlideDateTime(currentWorkWeekDate);
	var inputWeek = new GlideDateTime(dateInput);
	
	gs.info(workWeek > inputWeek);
	gs.info(workWeek < inputWeek);

	if(workWeek.getWeekOfYearLocalTime() != inputWeek.getWeekOfYearLocalTime()) {
		gs.addErrorMessage('Invalid Input: Date must be within the selected Work Week: ' + currentWorkWeekDate.getDisplayValue());
		current.setAbortAction(true);
	}
	

})(current, previous);]]></script>
